generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid())
  name             String
  targetWeight     Float
  currentWeight    Float
  dailyCalorieGoal Int
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  meals            Meal[]
  weights          Weight[]
}

model Meal {
  id        String   @id @default(uuid())
  userId    String
  mealType  String
  foodName  String
  calories  Int
  date      DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

model Weight {
  id        String   @id @default(uuid())
  userId    String
  weight    Float
  date      DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
}

